<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:pv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_amber_600">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />
    <android.support.design.widget.TabLayout
        android:id="@+id/tab_FindFragment_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/md_pink_300"
        pv:tabIndicatorColor="@color/md_pink_500"
        pv:tabMode="scrollable"
        pv:tabTextColor="@color/md_pink_50" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_FindFragment_pager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/tab_FindFragment_title" />

    <FrameLayout
        android:id="@+id/fl_spine_container"
        android:layout_width="300dp"
        android:layout_height="300dp">



    </FrameLayout>

</RelativeLayout>
